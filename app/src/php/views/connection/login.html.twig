<div class='connection-page-content light-to-dark-purple-bkgd'>
    {% if previousFormError is not empty %}
    <div class='error-container purple-to-blue-bkgd'>
        <p>{{ previousFormError }}</p>
    </div>
    {% endif %}

    <form action='index.php?action=log-account' method='post' class='purple-to-blue-bkgd'>
        <input type='email' name='user-email' placeholder='adresse e-mail' required />
        <input type='password' name='user-password' placeholder='mot de passe' required />

        <div class='form-links'>
            <a href='index.php?page=password-retrieving' class='tiny-button'>
                <p>Mot de passe oublié ?</p>
            </a>
            <input type='submit' value='Connexion' class='tiny-button' />
            <a href='index.php?page=registering' class='large-button'>Créer mon compte</a>
        </div>
    </form>
</div>