{% extends 'common.html.twig' %}

{% block pageContent %}
    <div class='connection-panel light-to-dark-purple-bkgd'>
        <form action='index.php?action=register-password' method='post' class='purple-to-blue-bkgd' id='token-signing-form'>
            <h2>Paramétrage du nouveau mot de passe</h2>
            
            <div class='password-input-container'>
                <button class='show-input-helper-btn'>
                    <i class="fa-solid fa-question"></i>
                </button>
                
                <input type='password' name='password' placeholder='mot de passe' id='user-password' required />
                
                <div class='input-helper'></div>
            </div>
            
            <div class='confirmation-password-input-container'>
                <button class='show-input-helper-btn'>
                    <i class="fa-solid fa-question"></i>
                </button>
                
                <input type='password' name='confirmation-password' placeholder='mot de passe (vérification)' id='user-confirmation-password' required />
                
                <div class='input-helper'>
                </div>
            </div>
            
            <div class='form-links'>
                <input type='submit' value='Valider' class='btn large-btn purple-bkgd' />
            </div>
        </form>
    </div>
{% endblock pageContent %}

{% block scripts %}
    {% include 'components/scripts.html.twig' %}
{% endblock scripts %}