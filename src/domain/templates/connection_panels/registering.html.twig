{% extends 'common.html.twig' %}

{% block pageContent %}
    <div class='connection-panel light-to-dark-purple-bkgd'>
        <form action='index.php?action=register-account' method='post' class='rounded purple-to-blue-bkgd'>
            <h2>Inscription</h2>
            
            <div class='email-input-container'>
                <button class='show-input-helper-btn' aria-label="Afficher l'aide à la saisie du champs email">
                    <i class="fa-solid fa-question"></i>
                </button>
                
                <input type='email' name='email' placeholder='adresse e-mail' id='user-email' required />
                
                <div class='input-helper'></div>
            </div>
            
            <div class='password-input-container'>
                <button class='show-input-helper-btn' aria-label="Afficher l'aide à la saisie du champs mot de passe">
                    <i class="fa-solid fa-question"></i>
                </button>
                
                <input type='password' name='password' placeholder='mot de passe' id='user-password' required />
                
                <div class='input-helper'>
                </div>
            </div>
            
            <div class='confirmation-password-input-container'>
                <button class='show-input-helper-btn' aria-label="Afficher l'aide à la saisie du champs mot de passe de confirmation">
                    <i class="fa-solid fa-question"></i>
                </button>
                
                <input type='password' name='confirmation-password' placeholder='mot de passe (vérification)' id='user-confirmation-password' required />
                
                <div class='input-helper'>
                </div>
            </div>
            
            <div class='form-links'>
                <input type='submit' value='Inscription' class='btn rounded large-btn purple-bkgd' aria-label='Valider le formulaire et créer mon compte' />
                
                <a href='index.php?page=login' class='btn rounded large-btn purple-bkgd' aria-label='Revenir au formulaire de connexion'>
                    J'ai déjà un compte
                </a>
            </div>
        </form>
    </div>
{% endblock pageContent %}

{% block scripts %}
    {% include 'components/scripts.html.twig' %}
{% endblock scripts %}