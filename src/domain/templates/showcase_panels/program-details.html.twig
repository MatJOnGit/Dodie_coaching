{% extends 'common.html.twig' %}

{% block pageContent %}
    <div class='showcase-panel program-details {{ program.name }}-program'>
        <a id='back-to-programs-list-btn' href='{{ showcasePanels['programs-list'] }}' class='btn rounded blue-bkgd' aria-label='Revenir à la page des formules'>
            <i class="fa-solid fa-arrow-left-long"></i>
            Retour aux formules
        </a>
        
        <div class='program-headers'>
            <h2>{{ program.frenchTitle }}</h2>
            
            <p><i class="fa-solid fa-clock"></i>{{ program.duration }} jours</p>
            
            <p>{{ program.subscriptionPrice }} €</p>
        </div>
        
        {% if program.description != NULL %}
            <div class='program-description'>
                <p>{{ program.description | raw }}</p>
            </div>
        {% endif %}
        
        <a id='go-to-loggin-btn' href='index.php?page=login' class='btn rounded blue-bkgd' aria-label="Accéder à l'espace de connexion">
            Je m'inscris !
        </a>
    </div>
{% endblock %}

{% block scripts %}
    {% include 'components/scripts.html.twig' %}
{% endblock scripts %}