{% extends 'common.html.twig' %}

{% block pageContent %}
    <div class='admin-panel'>
        <h3>Vos demandes de coaching</h3>

        {% if appliancesHeaders %}
            {% for headers in appliancesHeaders %}
                <ul class='appliance-card'>
                    <li>{{ headers['name'] }}</li>
                    <li>{{ headers['age'] }} ans, {{ headers['job_style'] | lower }}</li>
                    <li>Objectif(s) : {{ headers['program_goal'] }}</li>
                    <a href='index.php?page=appliance-details&id={{ headers['user_id'] }}' class='btn large-btn admin-link blue-bkgd'>Détails du profil</a>
                </ul>
            {% endfor %}
        {% else %}
            <div class='appliance-card'>
                <p>Vous n'avez pas de nouvelle demande à valider.</p>
            </div>
        {% endif %}
    </div>
{% endblock pageContent %}