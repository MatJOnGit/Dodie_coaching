{% extends 'common.html.twig' %}

{% block pageContent %}
    <div class='admin-panel'>
        <h3>Vos coaching en cours</h3>

        {% if subscribersHeaders %}
            {% for headers in subscribersHeaders %}
                <ul class='application-card'>
                    <li>{{ headers['name'] }}</li>
                    <li>{{ headers['age'] }} ans, {{ headers['job_style'] | lower }}</li>
                    <li>Objectif(s) : {{ headers['program_goal'] }}</li>
                    <li>Status du programme : {{ headers['program_status'] }}</li>
                    <a href='index.php?page=subscriber-details&id={{ headers['id'] }}' class='btn large-btn admin-link'>Détails du profil</a>
                </ul>
            {% endfor %}
        {% else %}
            <div class='application-card'>
                <p>Vous n'avez encore d'abonnés, mais ne vous inquiétez pas ... ça va venir !</p>
            </div>
        {% endif %}
    </div>
{% endblock pageContent %}