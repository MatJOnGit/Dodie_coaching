{% extends 'common.html.twig' %}

{% block pageContent %}
    <div class='connection-panel light-to-dark-purple-bkgd'>
        <form action='index.php?action=log-account' method='post' class='purple-to-blue-bkgd'>
            <h2>Connexion</h2>
            <div class='email-input-container'>
                <button class='show-input-helper-btn'>
                    <i class="fa-solid fa-question"></i>
                </button>

                <input type='email' name='email' placeholder='adresse e-mail' id='user-email' required />

                <div class='input-helper'>
                </div>
            </div>
            <div class='password-input-container'>
                <button class='show-input-helper-btn'>
                    <i class="fa-solid fa-question"></i>
                </button>

                <input type='password' name='password' placeholder='mot de passe' id='user-password' required />

                <div class='input-helper'>
                </div>
            </div>

            <div class='form-links'>
                <a href='index.php?page=password-retrieving' class='btn tiny-btn purple-bkgd'>
                    <span>Mot de passe oublié ?</span>
                </a>
                <input type='submit' value='Connexion' id='submit-btn' class='btn tiny-btn purple-bkgd' />
                <a href='index.php?page=registering' class='btn large-btn purple-bkgd'>
                    <span>Créer mon compte</span>
                </a>
            </div>
        </form>
    </div>
{% endblock pageContent %}

{% block scripts %}
    {% include 'components/scripts.html.twig' %}
{% endblock scripts %}