{% extends 'common.html.twig' %}

{% block pageContent %}
    <div class='connection-panel light-to-dark-purple-bkgd'>
        <form action='index.php?action=register-account' method='post' class='purple-to-blue-bkgd'>
            <h2>Inscription</h2>
            <div class='email-input-container'>
                <button class='show-input-helper-btn'>
                    <i class="fa-solid fa-question"></i>
                </button>

                <input type='email' name='user-email' placeholder='adresse e-mail' id='user-email' required />

                <div class='input-helper'>
                </div>
            </div>

            <div class='password-input-container'>
                <button class='show-input-helper-btn'>
                    <i class="fa-solid fa-question"></i>
                </button>

                <input type='password' name='user-password' placeholder='mot de passe' id='user-password' required />

                <div class='input-helper'>
                </div>
            </div>

            <div class='confirmation-password-input-container'>
                <button class='show-input-helper-btn'>
                    <i class="fa-solid fa-question"></i>
                </button>

                <input type='password' name='user-confirmation-password' placeholder='mot de passe (vérification)' id='user-confirmation-password' required />

                <div class='input-helper'>
                </div>
            </div>

            <div class='form-links'>
                <input type='submit' value='Inscription' class='btn large-btn purple-bkgd' />
                <a href='index.php?page=login' class='btn large-btn purple-bkgd'>
                    <span>J'ai déjà un compte</span>
                </a>
            </div>
        </form>
    </div>
{% endblock pageContent %}

{% block scripts %}
    {% include 'components/scripts.html.twig' %}
{% endblock scripts %}