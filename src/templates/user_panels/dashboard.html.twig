{% extends 'base.html.twig' %}

{% block title %}
    {{ frenchTitle | capitalize }}
{% endblock title %}

{% block styles %}
    {% for stylePath in stylePaths %}
        <link rel='stylesheet' href='./../assets/css/{{ stylePath }}.css' type='text/css'>
    {% endfor %}
{% endblock styles %}

{% block header %}
    {% include 'components/header.html.twig' %}
{% endblock header %}

{% block headerLayer %}
    {% include 'components/header-layer.html.twig' %}
{% endblock headerLayer %}

{% block pageContent %}
    <div class='user-panel dashboard-panel'>
        <a href='' class='settings-btn'>
            <i class="fa-solid fa-gear"></i>
        </a>

        <div class='progress-graph-cnn'>
            <canvas id="user-progress-graph"></canvas>
            <figcaption>Objectif de poids : 86 kg</figcaption>
        </div>

        <nav class='dashboard-menu'>
            <ul>
                {% for dashboardMenuItem in dashboardMenuItems %}
                <li>
                    <a href='index.php?page={{ dashboardMenuItem.link }}' class='btn dashboard-btn rounded-btn light-to-dark-purple-bkgd'>
                        <span>{{ dashboardMenuItem.frenchTitle }}</span>
                        <i class="fa-solid fa-chevron-right"></i>
                    </a>
                </li>
                {% endfor %}
            </ul>
        </nav>
    </div>
{% endblock pageContent %}

{% block footer %}
    {% include 'components/footer.html.twig' %}
{% endblock footer %}