{% extends 'common.html.twig' %}

{% block pageContent %}
    <div class='user-panel'>
        <h3>{{ meal['meal'] | capitalize }} du {{ meal['day'] | lower }}</h3>

        {% if ingredients is iterable %}
            <ul class='ingredients-list'>
                {% for ingredient in ingredients %}
                    <li class='ingredients-list-item'>
                        <img src="./../public/img/ingredients/{{ ingredient['type'] }}/{{ ingredient['name'] | lower }}.jpg" alt="{{ ingredient['name'] | lower }}-picture" class='ingredient-picture' />
                        
                        <div class='ingredient-desc'>
                            <p>
                                {{ ingredient['quantity'] }}
                                
                                {% if ingredient['measure'] is not empty %}
                                    {{ ingredient['measure'] }} de
                                {% endif %}
                                
                                {{ ingredient['french_name'] }}
                                
                                {% if ingredient['recipe'] is not null %}
                                    {{ ingredient['recipe'] }}
                                {% endif %}
                            </p>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
{% endblock pageContent %}